<section>
  <ul id="cards">
    <% page_articles.each_with_index do |article, i| %>
    <% if article.data.category == 'portfolio' %>
    <li class="card">
      <% link_to article, :title => "#{article.title}", :class => "thumbnail #{article.data.color}" do %>
        <img class="2x grey" src="<%= article.data.thumbnail %>"/>
        <div class="meta">
          <h3><%= article.data.title %></h3>
          <p><%= article.data.description %></p>
        </div>
      <% end %>
    </li>
    <% end %>
    <% end %>
  </ul>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
</section>
